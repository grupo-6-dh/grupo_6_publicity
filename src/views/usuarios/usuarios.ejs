<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Publicity</title>
    <!--Estilos Grupo 6-->
    <link rel="Stylesheet" href="/css/header-footer.css" type="text/css">
    <link rel="Stylesheet" href="/css/usuarios.css" type="text/css">
    <!--Iconos-->
    <script src="https://kit.fontawesome.com/41f3340cce.js" crossorigin="anonymous"></script>
    <!--Font-->
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
</head>

<body>
    <%- include('../partials/header.ejs') %>

        <!--Main-->
        <main>
            <div class="main-container">
                <div class="tab-usuarios">
                    <div class="titulo">
                        <h2>Listado de Ususarios</h2>
                    </div>
                    <table class="tabla">
                        <tr>
                            <th id="cabecera">Id</th>
                            <th id="cabecera">Nombre</th>
                            <th id="cabecera">Email</th>
                            <th id="cabecera">Rol</th>
                            <th id="cabecera">Acci√≥n</th>
                        </tr>

                        <% for(let i=0;i < usuarios.length;i++) {%>
                            <tr>
                                <td>
                                    <%= usuarios[i].id%>
                                </td>
                                <td>
                                    <%= usuarios[i].name%>
                                </td>
                                <td>
                                    <%= usuarios[i].email%>
                                </td>
                                <td>
                                    <%if(usuarios[i].idUserCategory == 1){%><span>-</span><%}%>
                                    <%if(usuarios[i].idUserCategory == 2){%><span style="color:green">ADMIN</span><%}%>
                                </td>
                                <td >
                                    <%if(usuarios[i].idUserCategory==1){%>
                                        <form method="GET" action="/users/upgrade/<%=usuarios[i].id%>">
                                            <button title="Hacer admin"><i class="fa-solid fa-angles-up"></i></button>
                                        </form>
                                        <%}%>
                                    <%if(usuarios[i].idUserCategory==2){%>
                                        <form method="GET" action="/users/downgrade/<%=usuarios[i].id%>">
                                            <button title="Hacer usuario normal"><i class="fa-solid fa-angles-down"></i></button>
                                        </form>
                                    <%}%>
                                    
                                    <form method="POST" action="/users/eliminar/<%=usuarios[i].id%>?_method=DELETE">
                                        <button title="Eliminar"><i class="fa-solid fa-trash-can"></i></button>
                                    </form>
                                </td>
                            </tr>
                            <%}%>
                    </table>

                </div>
            </div>
        </main>
        <!--Footer-->
        <%-include('../partials/footer.ejs') %>


</body>

</html>